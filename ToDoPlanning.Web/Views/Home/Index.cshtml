@model ToDoPlanning.Models.Response.Web.PlanningViewModel

@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Planning Table</title>
</head>
<body>

<h1>Planning Table</h1>

@if (Model != null && Model.Developers != null && Model.Developers.Any())
{
    <table border="1">
        <thead>
        <tr>
            <th>Developer Name</th>
            <th>Task Names</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var developer in Model.Developers)
        {
            <tr>
                <td>@developer.Name</td>
                <td>
                    @if (developer.Tasks != null && developer.Tasks.Any())
                    {
                        foreach (var task in developer.Tasks)
                        {
                            <span>@task.Name</span><br />
                        }
                    }
                    else
                    {
                        <span>No tasks assigned.</span>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>

    <p>Weeks: @Model.Weeks</p>
}
else
{
    <p>No data available.</p>
}

</body>
</html>